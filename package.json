{
  "name": "auto-columns",
  "displayName": "auto-columns",
  "description": "从 Swagger/OpenAPI 文档中提取分页接口的请求参数与 200 响应字段，在 VS Code 中以可视化方式展示，并一键复制为前端所需的配置结构",
  "publisher": "lijiapeng",
  "icon": "images/logo.png",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/time202051/auto-columns.git"
  },
  "homepage": "https://github.com/time202051/auto-columns",
  "bugs": {
    "url": "https://github.com/time202051/auto-columns/issues"
  },
  "activationEvents": [
    "onCommand:auto-columns.extractSwaggerInfo",
    "onCommand:auto-columns.collectApiUrls",
    "onCommand:auto-columns.setSwaggerBaseUrl"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-columns.setSwaggerBaseUrl",
        "title": "设置 Swagger 基地址",
        "category": "Auto Columns"
      },
      {
        "command": "auto-columns.collectApiUrls",
        "title": "提取 Swagger 所有接口",
        "category": "Auto Columns"
      },
      {
        "command": "auto-columns.extractSwaggerInfo",
        "title": "提取选中接口（如：/api/app/xxxx）",
        "category": "Auto Columns"
      }
    ],
    "submenus": [
      {
        "id": "auto-columns.editorContext",
        "label": "Auto Columns"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "auto-columns.editorContext",
          "when": "resourceLangId == vue || resourceLangId == javascript",
          "group": "1_modification"
        }
      ],
      "auto-columns.editorContext": [
        {
          "command": "auto-columns.setSwaggerBaseUrl",
          "group": "1_modification@1"
        },
        {
          "command": "auto-columns.collectApiUrls",
          "when": "resourceLangId == vue || resourceLangId == javascript",
          "group": "1_modification@2"
        },
        {
          "command": "auto-columns.extractSwaggerInfo",
          "when": "resourceLangId == vue || resourceLangId == javascript",
          "group": "1_modification@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@types/swagger-parser": "^7.0.1",
    "axios": "^1.12.2",
    "swagger-client": "^3.0.1",
    "swagger-parser": "^10.0.3",
    "vsce": "^2.15.0"
  }
}
